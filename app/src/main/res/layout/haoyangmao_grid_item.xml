<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/haoyangmao_imageview"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/haoyangmao_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/haoyangmao_imageview"
            android:layout_margin="5dp"
            android:ems="10"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/haoyangmao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/haoyangmao_title"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/holo_red_light" />

        <ImageView
            android:id="@+id/haoyangmao_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/haoyangmao_price"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/haoyangmao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/haoyangmao_icon"
            android:layout_below="@id/haoyangmao_price"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/haoyangmao_icon"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/haoyangmao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_alignTop="@id/haoyangmao_name"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
