<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_haitao"
        android:src="@mipmap/ic_launcher"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_haitao"
        android:layout_toRightOf="@+id/image_haitao"
        android:layout_toEndOf="@+id/image_haitao"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/title_tv" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/price_tv"
        android:layout_above="@+id/shop_tv"
        android:layout_toRightOf="@+id/image_haitao"
        android:layout_toEndOf="@+id/image_haitao"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_tv"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/shop_tv"
        android:layout_alignBottom="@+id/shop_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/siteIcon_iv"
        android:layout_alignBottom="@+id/image_haitao"
        android:layout_alignLeft="@+id/title_tv"
        android:layout_alignStart="@+id/title_tv" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_tv"
        android:textSize="10dp"
        android:layout_marginLeft="150dp"
        android:layout_alignBottom="@+id/siteIcon_iv"
        />
</RelativeLayout>