<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cuxiao_pic"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cuxiao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cuxiao_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/cuxiao_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignTop="@+id/cuxiao_icon"
                android:layout_toRightOf="@id/cuxiao_icon"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/cuxiao_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@id/cuxiao_name"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
