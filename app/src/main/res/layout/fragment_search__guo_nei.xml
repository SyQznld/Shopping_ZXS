<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.demo1.fragment.Search_GuoNeiFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <TextView
       android:id="@+id/search_fenlei"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:gravity="center_horizontal"
       android:background="@drawable/toolbar_search_shape"
       android:layout_height="wrap_content"
       android:text="分类"/>
   <TextView
       android:id="@+id/search_shangcheng"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:gravity="center_horizontal"
       android:background="@drawable/toolbar_search_shape"
       android:layout_height="wrap_content"
       android:text="商城"/>
   <TextView
       android:id="@+id/search_pinpai"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:gravity="center_horizontal"
       android:background="@drawable/toolbar_search_shape"
       android:layout_height="wrap_content"
       android:text="品牌"/>
   <TextView
       android:id="@+id/search_jiage"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:gravity="center_horizontal"
       android:background="@drawable/toolbar_search_shape"
       android:layout_height="wrap_content"
       android:text="价格"/>
</LinearLayout>

   <com.handmark.pulltorefresh.library.PullToRefreshListView
       android:id="@+id/search_listView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

</LinearLayout>
