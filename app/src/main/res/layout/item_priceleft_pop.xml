<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/order_tv"
        android:text="默认排序"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_heigh_tv"
        android:text="价格由低到高"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:layout_below="@+id/order_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_more"
        android:layout_toRightOf="@+id/order_heigh_tv"
        android:layout_below="@+id/order_tv"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"

        android:background="@mipmap/filter_click_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_low_tv"
        android:text="价格由高到低"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/order_heigh_tv"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image2_more"
        android:layout_toRightOf="@+id/order_heigh_tv"
        android:layout_below="@+id/order_heigh_tv"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"

        android:background="@mipmap/filter_click_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>