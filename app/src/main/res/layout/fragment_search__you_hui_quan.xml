<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.demo1.fragment.Search_YouHuiQuanFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_search_shape"
        android:layout_margin="20dp"
        android:text="分类"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_search_shape"
        android:layout_margin="20dp"
        android:text="商城"
        android:gravity="center_horizontal"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhuise"/>
    <ImageView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/filter_selected_empty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="没有搜索结果"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="去全网比价看看吧"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhuise"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="为您推荐热门优惠券"/>
    <com.example.administrator.demo1.view.SearchLiuShiText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_youhui_text"></com.example.administrator.demo1.view.SearchLiuShiText>
</LinearLayout>
