<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_marginTop="10dp"
    android:background="@mipmap/coupon_background_1"
    android:layout_width="0dp"
    android:layout_weight="1.5"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:id="@+id/zb_youhui_icon"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/zb_youhui_icon"
    android:id="@+id/zb_youhui_date"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    />
</RelativeLayout>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:background="@mipmap/coupon_background_2"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zb_youhui_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/zb_youhui_hcoupon"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@mipmap/filter_click_more"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/imageView" />
</RelativeLayout>
</LinearLayout>